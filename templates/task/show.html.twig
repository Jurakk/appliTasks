{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <h1>Task</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ task.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ task.description }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ task.statut ? 'Terminée' : 'En cours' }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ task.dateCrea ? task.dateCrea|date('d-m-y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_task_edit', {'id': task.id}) }}">Editer</a>
    {{ include('task/_delete_form.html.twig') }}<br>
    <a href="{{ path('app_task_index') }}">Retour à la liste</a>


{% endblock %}
